<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SortableNineGridView">
        <!-- 是否显示加号，默认值为 true -->
        <attr name="sngvPlusEnable" format="boolean"/>
        <!-- 是否可拖拽排序，默认值为 true -->
        <attr name="sngvSortable" format="boolean"/>
        <!-- 删除按钮图片，默认值为 R.mipmap.bga_pp_ic_delete -->
        <attr name="sngvDeleteDrawable" format="reference"/>
        <!-- 可选择图片的总张数,默认值为 9 -->
        <attr name="sngvMaxItemCount" format="integer"/>
        <!-- 列数,默认值为 3 -->
        <attr name="sngvItemSpanCount" format="integer"/>
        <!-- 添加按钮图片，默认值为 R.mipmap.bga_pp_ic_plus -->
        <attr name="sngvPlusDrawable" format="reference"/>
         <!-- Item 间的水平和垂直间距，默认值为 4dp -->
        <attr name="sngvItemWhiteSpacing" format="dimension|reference"/>
        <!-- 出去九宫格部分的空白区域的尺寸，默认值为 100dp -->
        <attr name="sngvOtherWhiteSpacing" format="dimension|reference"/>
        <!-- 是否可移除，默认值为 true -->
        <attr name="sngvRemovable" format="boolean"/>
        <!-- item 的尺寸，大于 0dp 时优先级高于 sngvOtherWhiteSpacing，默认值为 0dp -->
        <attr name="sngvItemWidth" format="dimension|reference"/>
    </declare-styleable>

</resources>